---
import site from "../data/site.json";
import FloatingWhatsAppButton from "../components/common/FloatingWhatsAppButton.astro";
import "../styles/global.css";

type SeoData = {
  title?: string;
  description?: string;
  canonical?: string;
  siteName?: string;
  locale?: string;
  image?: string;
  keywords?: string[];
  twitter?: { card?: string; site?: string; creator?: string };
  organization?: {
    name?: string;
    legalName?: string;
    url?: string;
    logo?: string;
    phone?: string;
    email?: string;
    address?: {
      streetAddress?: string;
      addressLocality?: string;
      addressRegion?: string;
      postalCode?: string;
      addressCountry?: string;
    };
  };
  doctors?: { name: string; title?: string; specialty?: string }[];
  services?: string[];
  openHours?: string[];
  areaServed?: string[];
  social?: string[];
};

type Props = { seo?: SeoData };

const { seo } = Astro.props as Props;

const metaTitle = seo?.title ?? site.meta?.title ?? site.brand?.name ?? "";
const description = seo?.description ?? site.meta?.description ?? "";
const canonical = seo?.canonical ?? site.meta?.url ?? "";
const ogImage = seo?.image ?? site.meta?.image ?? "";
const siteName = seo?.siteName ?? site.meta?.siteName ?? site.brand?.name ?? "";
const locale = seo?.locale ?? site.meta?.locale ?? "";
const keywords = seo?.keywords?.length ? seo.keywords.join(", ") : undefined;
const twitterCard = seo?.twitter?.card ?? site.meta?.twitterCard ?? "";
const authors =
  seo?.doctors?.length && seo.doctors.map((doctor) => doctor.name).filter(Boolean).join(", ");
const robots = site.meta?.robots ?? "";
const themeColor = site.meta?.themeColor ?? "";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Dentist",
  name: seo?.organization?.name ?? siteName,
  legalName: seo?.organization?.legalName,
  url: canonical,
  image: ogImage,
  logo: seo?.organization?.logo ?? ogImage,
  telephone: seo?.organization?.phone,
  email: seo?.organization?.email,
  description,
  address: seo?.organization?.address,
  areaServed: seo?.areaServed,
  openingHours: seo?.openHours,
  sameAs: seo?.social,
  knowsAbout: seo?.services,
  employee: seo?.doctors?.map((doctor) => ({
    "@type": "Person",
    name: doctor.name,
    jobTitle: doctor.title ?? doctor.specialty,
    description: doctor.specialty
  }))
};
---

<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/mont_logo.png" />
    <link rel="shortcut icon" type="image/png" href="/mont_logo.png" />
    <link rel="apple-touch-icon" href="/mont_logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{metaTitle}</title>
    <meta name="description" content={description} />
    {keywords && <meta name="keywords" content={keywords} />}
    {authors && <meta name="author" content={authors} />}
    {canonical && <link rel="canonical" href={canonical} />}
    {canonical && <link rel="alternate" hreflang="es-cl" href={canonical} />}
    {robots && <meta name="robots" content={robots} />}
    {themeColor && <meta name="theme-color" content={themeColor} />}

    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    {canonical && <meta property="og:url" content={canonical} />}
    {ogImage && <meta property="og:image" content={ogImage} />}
    {siteName && <meta property="og:site_name" content={siteName} />}
    {locale && <meta property="og:locale" content={locale} />}

    {twitterCard && <meta name="twitter:card" content={twitterCard} />}
    {seo?.twitter?.site && <meta name="twitter:site" content={seo.twitter.site} />}
    {seo?.twitter?.creator && <meta name="twitter:creator" content={seo.twitter.creator} />}
    <meta name="twitter:title" content={metaTitle} />
    <meta name="twitter:description" content={description} />
    {ogImage && <meta name="twitter:image" content={ogImage} />}

    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </head>
  <body class="bg-(--ivory) text-(--charcoal) antialiased">
    <script>
      document.documentElement.classList.add("js-enabled");
    </script>
    <a
      href="#contenido"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-white focus:px-4 focus:py-2 focus:rounded-full"
    >
      {site.a11y?.skipToContent}
    </a>
    <slot />
    <FloatingWhatsAppButton
      whatsapp={site.contact.whatsapp}
      ariaLabel={site.a11y?.whatsappLabel ?? ""}
    />
    <script type="module" src="/scripts/reveal.js?v=2"></script>
  </body>
</html>
