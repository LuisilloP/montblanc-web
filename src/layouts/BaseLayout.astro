---
import "../styles/global.css";

type Props = {
  title?: string;
  description?: string;
  ogImage?: string;
  url?: string;
};

const {
  title = "MONT BLANC – Odontología y Estética Facial",
  description = "Clínica boutique en Ovalle que combina odontología avanzada y estética facial con un equipo de especialistas.",
  ogImage = "/og-montblanc.jpg",
  url = "https://montblanc.cl"
} = Astro.props as Props;
---

<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:image" content={ogImage} />
    <meta name="theme-color" content="#F8F0E8" />
  </head>
  <body class="bg-[var(--ivory)] text-[var(--charcoal)] antialiased">
    <a
      href="#contenido"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-white focus:px-4 focus:py-2 focus:rounded-full"
    >
      Saltar al contenido principal
    </a>
    <slot />
    <script type="module">
      import "/src/libs/reveal.ts";
    </script>
  </body>
</html>
