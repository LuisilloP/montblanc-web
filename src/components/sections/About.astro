---
type Doctor = {
  name: string;
  role: string;
  credentials: string[];
  photo?: string;
};

type Props = {
  data: {
    title: string;
    description: string;
    highlights: string[];
    doctors: Doctor[];
  };
};

const { data } = Astro.props as Props;
---

<section id="sobre" class="container-wide space-y-12 py-16 lg:space-y-16 lg:py-24">
  <div class="grid gap-12 lg:grid-cols-[1.05fr_0.95fr] lg:items-center">
    <div class="space-y-5">
      <p class="pill w-fit text-[11px] tracking-[0.2em]">Sobre nosotros</p>
      <h2 class="text-4xl leading-tight sm:text-5xl">{data.title}</h2>
      <p class="text-lg leading-relaxed text-[var(--charcoal)]/75 sm:text-xl">{data.description}</p>
      <ul class="grid gap-4 sm:grid-cols-2">
        {data.highlights.map((item) => (
          <li class="flex items-start gap-3 rounded-2xl bg-white/70 px-5 py-4 text-sm font-medium text-[var(--charcoal)] shadow-sm ring-1 ring-[rgba(176,128,80,0.15)]">
            <span class="mt-1 inline-flex h-7 w-7 items-center justify-center rounded-full bg-[var(--gold)]/15 text-[var(--goldLight)]">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M10 2l2.09 4.26L17 7.27l-3.5 3.41.83 4.85L10 13.77l-4.33 2.76.83-4.85L3 7.27l4.91-.99L10 2z" />
              </svg>
            </span>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    </div>

    <div class="grid gap-5 sm:grid-cols-2">
      {data.doctors.map((doctor) => (
        <article class="card flex flex-col gap-5 p-7">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-lg font-semibold text-[var(--charcoal)]">{doctor.name}</p>
              <p class="text-xs uppercase tracking-[0.16em] text-[var(--goldLight)]">{doctor.role}</p>
            </div>
            <div class="h-14 w-14 rounded-full bg-[linear-gradient(135deg,rgba(176,128,80,0.16),rgba(248,232,224,0.9))] ring-1 ring-[rgba(176,128,80,0.2)]" />
          </div>
          <ul class="space-y-2.5 text-sm leading-relaxed text-[var(--charcoal)]/75">
            {doctor.credentials.map((credential) => (
              <li class="flex gap-2">
                <span class="mt-1 h-1.5 w-1.5 rounded-full bg-[var(--goldLight)]" />
                <span>{credential}</span>
              </li>
            ))}
          </ul>
          <div class="gold-divider" />
          <p class="text-sm text-[var(--charcoal)]/65">Protocolos enfocados en seguridad, confort y resultados naturales.</p>
        </article>
      ))}
    </div>
  </div>
</section>
