---
type Partner = { name: string; logo: string };
type Props = { data: { title: string; text: string; items: Partner[] } };

const { data } = Astro.props as Props;
---

<section id="convenios" class="container-wide space-y-8 py-16 lg:space-y-12 lg:py-24" data-reveal>
  <div class="space-y-2">
    <p class="pill w-fit text-[11px] tracking-[0.2em]">Convenios</p>
    <h2 class="text-4xl leading-tight sm:text-5xl">{data.title}</h2>
    <p class="text-lg text-[var(--charcoal)]/70">{data.text}</p>
  </div>

  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
    {data.items.map((partner, idx) => (
      <div
        class="card flex h-32 items-center justify-center px-5 py-4 reveal-on-scroll"
        data-reveal
        data-reveal-delay={`${idx * 140}ms`}
      >
        <img
          src={partner.logo}
          alt={`Logo de ${partner.name}`}
          class="max-h-16 w-auto object-contain"
          loading="lazy"
          decoding="async"
        />
      </div>
    ))}
  </div>
</section>
