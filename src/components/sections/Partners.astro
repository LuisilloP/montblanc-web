---
type Partner = { name: string; logo: string };
type Props = { data: { title: string; text: string; items: Partner[] } };

const { data } = Astro.props as Props;
---

<section id="convenios" class="container-wide space-y-8 py-16 lg:space-y-12 lg:py-24">
  <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
    <div class="space-y-2">
      <p class="pill w-fit text-[11px] tracking-[0.2em]">Convenios</p>
      <h2 class="text-4xl leading-tight sm:text-5xl">{data.title}</h2>
      <p class="text-lg text-[var(--charcoal)]/70">{data.text}</p>
    </div>
    <div class="rounded-full bg-white/80 px-4 py-2 text-sm text-[var(--charcoal)]/65 ring-1 ring-[rgba(176,128,80,0.18)]">
      Reemplaza los logos con tus convenios reales
    </div>
  </div>

  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
    {data.items.map((partner) => (
      <div class="card flex h-32 items-center justify-center px-5 py-4">
        <img
          src={partner.logo}
          alt={`Logo de ${partner.name}`}
          class="max-h-16 w-auto object-contain"
          loading="lazy"
          decoding="async"
        />
      </div>
    ))}
  </div>
</section>
