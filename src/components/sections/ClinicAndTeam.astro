---
const clinicHighlights = [
  { title: "Tecnología 3D", desc: "Escaneo intraoral y planificación digital para máxima precisión." },
  { title: "Protocolos seguros", desc: "Bioseguridad reforzada y esterilización monitorizada." },
  { title: "Sedación consciente", desc: "Opciones para pacientes ansiosos y procedimientos largos." },
  { title: "Atención personalizada", desc: "Planes hechos a medida con seguimiento cercano." },
  { title: "Laboratorio aliado", desc: "Coordinación ágil con laboratorio especializado." }
];

const reasons = [
  { title: "Acompañamiento integral", desc: "Explicamos cada paso y resolvemos dudas en el momento." },
  { title: "Resultados consistentes", desc: "Protocolos estandarizados y control de calidad en cada fase." }
];

const doctors = [
  {
    name: "Dra. Valentina Herrera",
    role: "Odontóloga",
    specialty: "Rehabilitación e Implantología",
    photo: "/doctores/doctora.webp",
    focus: "Enfoque en tratamientos integrales con mínima invasión.",
    bullets: [
      "Diplomado en Rehabilitación Oral (Universidad —)",
      "Formación en Implantología y cirugía guiada",
      "Certificación en planificación digital 3D"
    ],
    tags: ["Implantes", "Rehabilitación", "Estética"]
  },
  {
    name: "Dr. Ignacio Ruiz",
    role: "Odontólogo",
    specialty: "Estética y Prótesis",
    photo: "/doctores/doctor.webp",
    focus: "Restauraciones estéticas que priorizan función y armonía.",
    bullets: [
      "Diplomado en Prótesis y Estética (Universidad —)",
      "Certificación en carillas y restauraciones adhesivas",
      "Capacitación en fotografía clínica y diseño de sonrisa"
    ],
    tags: ["Prótesis", "Carillas", "Diseño de sonrisa"]
  }
];
---

<section id="clinica-equipo" class="relative overflow-hidden py-16 lg:py-24">
  <div class="pointer-events-none absolute inset-0 opacity-75">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_18%_18%,rgba(255,255,255,0.6),transparent_32%),radial-gradient(circle_at_80%_12%,rgba(230,214,198,0.55),transparent_30%),var(--bg-noise)]" />
  </div>

  <div class="container-wide relative grid gap-12 lg:grid-cols-[1fr_1.1fr]">
    <div class="space-y-7">
      <div class="space-y-3">
        <p class="text-[11px] font-semibold uppercase tracking-[0.24em] text-[var(--goldLight)]">La clínica</p>
        <h2 class="text-3xl font-semibold text-[var(--charcoal)] sm:text-4xl">Precisión clínica con calidez humana</h2>
        <p class="text-base text-[var(--charcoal)]/75 sm:text-lg">
          Unimos tecnología, protocolos estrictos y un trato cercano para que cada paciente se sienta seguro, informado y acompañado antes, durante y después de su tratamiento.
        </p>
      </div>

      <div class="grid gap-4 sm:grid-cols-2">
        {clinicHighlights.map((item) => (
          <div class="flex gap-3 rounded-2xl border border-white/40 bg-white/85 p-4 shadow-[0_14px_36px_rgba(0,0,0,0.08)] backdrop-blur-[2px]">
            <span class="mt-0.5 inline-flex h-10 w-10 items-center justify-center rounded-2xl bg-[rgba(230,214,198,0.25)] text-[var(--charcoal)] ring-1 ring-[rgba(176,128,80,0.25)]">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 12l4 4L19 7" />
              </svg>
            </span>
            <div class="space-y-1">
              <p class="text-sm font-semibold text-[var(--charcoal)]">{item.title}</p>
              <p class="text-sm text-[var(--charcoal)]/70">{item.desc}</p>
            </div>
          </div>
        ))}
      </div>

      <div class="grid gap-3 rounded-2xl border border-white/50 bg-white/90 p-5 shadow-[0_16px_42px_rgba(0,0,0,0.08)] backdrop-blur-[2px] sm:grid-cols-2">
        {reasons.map((reason) => (
          <div class="space-y-1">
            <p class="text-xs uppercase tracking-[0.18em] text-[var(--goldLight)]">Razones para elegirnos</p>
            <p class="text-base font-semibold text-[var(--charcoal)]">{reason.title}</p>
            <p class="text-sm text-[var(--charcoal)]/70">{reason.desc}</p>
          </div>
        ))}
      </div>

      <div class="flex flex-wrap gap-3">
        <a
          href="https://wa.me/56900000000"
          class="inline-flex items-center gap-2 rounded-full bg-white px-4 py-2 text-sm font-semibold text-[var(--charcoal)] shadow-[0_10px_35px_rgba(32,32,32,0.08)] ring-1 ring-[rgba(32,32,32,0.06)] transition hover:-translate-y-[1px] hover:shadow-[0_14px_40px_rgba(32,32,32,0.12)] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[var(--goldLight)]"
          aria-label="Agendar por WhatsApp"
          target="_blank"
          rel="noreferrer"
        >
          Agendar por WhatsApp
        </a>
        <a
          href="#galeria-clinica"
          class="inline-flex items-center gap-2 rounded-full border border-[rgba(32,32,32,0.08)] bg-white/85 px-4 py-2 text-sm font-semibold text-[var(--charcoal)] shadow-sm backdrop-blur-[2px] transition hover:-translate-y-[1px] hover:shadow-[0_12px_32px_rgba(32,32,32,0.12)] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[var(--goldLight)]"
        >
          Conoce la clínica
        </a>
      </div>
    </div>

    <div class="space-y-5">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-[11px] font-semibold uppercase tracking-[0.24em] text-[var(--goldLight)]">Equipo médico</p>
          <h3 class="text-2xl font-semibold text-[var(--charcoal)] sm:text-3xl">Profesionales que te acompañan</h3>
        </div>
      </div>
      <div class="grid gap-5 md:grid-cols-2">
        {doctors.map((doctor) => (
          <article class="flex h-full flex-col gap-4 rounded-2xl border border-white/45 bg-white/90 p-5 shadow-[0_18px_46px_rgba(0,0,0,0.08)] backdrop-blur-[2px]">
            <div class="flex items-start gap-4">
              <div class="relative h-16 w-16 overflow-hidden rounded-2xl ring-1 ring-[rgba(176,128,80,0.28)] shadow-[0_10px_22px_rgba(0,0,0,0.08)]">
                <img
                  src={doctor.photo}
                  alt={`Foto de ${doctor.name}`}
                  loading="lazy"
                  decoding="async"
                  width="160"
                  height="160"
                  class="h-full w-full object-cover"
                />
              </div>
              <div class="space-y-1">
                <p class="text-[11px] font-semibold uppercase tracking-[0.2em] text-[var(--goldLight)]">{doctor.specialty}</p>
                <h4 class="text-lg font-semibold text-[var(--charcoal)]">{doctor.name}</h4>
                <p class="text-sm text-[var(--charcoal)]/60">{doctor.role}</p>
              </div>
            </div>

            <ul class="space-y-1.5 text-sm text-[var(--charcoal)]/75">
              {doctor.bullets.map((item) => (
                <li class="flex gap-2">
                  <span aria-hidden="true" class="mt-1 h-1.5 w-1.5 rounded-full bg-[var(--goldLight)]/80" />
                  <span>{item}</span>
                </li>
              ))}
            </ul>

            <p class="text-sm font-semibold text-[var(--charcoal)]">Enfoque</p>
            <p class="text-sm text-[var(--charcoal)]/70">{doctor.focus}</p>

            {doctor.tags && doctor.tags.length > 0 && (
              <div class="flex flex-wrap gap-2 pt-1">
                {doctor.tags.map((tag) => (
                  <span class="rounded-full border border-[rgba(176,128,80,0.35)] bg-[rgba(255,255,255,0.9)] px-3 py-1 text-xs font-semibold text-[var(--charcoal)] shadow-[0_6px_16px_rgba(0,0,0,0.06)]">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </article>
        ))}
      </div>
    </div>
  </div>
</section>
