---
const doctors = [
  {
    name: "Dra. Javiera Jara",
    badge: "Rehabilitación e Implantología",
    subtitle: "Tratamientos integrales con mínima invasión.",
    experienceYears: "10+",
    tags: ["Implantes", "Rehabilitación", "Estética"],
    bullets: [
      "Diplomado en Rehabilitación Oral.",
      "Formación en implantología y cirugía guiada.",
      "Certificación en planificación digital 3D."
    ],
    photo: "/doctores/doctora.webp"
  },
  {
    name: "Dr. Gustavo Padilla",
    badge: "Estética y Prótesis",
    subtitle: "Restauraciones que priorizan función y armonía.",
    experienceYears: "8+",
    tags: ["Prótesis", "Carillas", "Diseño de sonrisa"],
    bullets: [
      "Diplomado en Prótesis y Estética.",
      "Certificación en carillas y restauraciones adhesivas.",
      "Capacitación en fotografía clínica y diseño de sonrisa."
    ],
    photo: "/doctores/doctor.webp"
  }
];
---

<section id="sobre" class="relative overflow-hidden mt-8 sm:mt-0 pt-24 pb-12 lg:pt-16 lg:pb-16" data-reveal>
  <div class="pointer-events-none absolute inset-0 opacity-75">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_20%_18%,rgba(255,255,255,0.6),transparent_32%),radial-gradient(circle_at_80%_14%,rgba(230,214,198,0.55),transparent_30%),var(--bg-noise)]" />
  </div>

  <div class="container-wide relative space-y-8">
    <div class="space-y-3 text-center lg:text-left">
      <p class="text-[11px] font-semibold uppercase tracking-[0.26em] text-[var(--goldLight)]">Sobre nosotros</p>
      <h2 class="text-3xl font-semibold text-[var(--charcoal)] sm:text-4xl">Equipo médico que te acompaña</h2>
      <p class="text-base text-[var(--charcoal)]/75 sm:text-lg">
        Profesionales con experiencia y enfoque humano. Reemplaza las credenciales con tus datos reales.
      </p>
    </div>

    <div class="grid gap-8 xl:grid-cols-2">
      {doctors.map((doctor, idx) => (
        <article
          class="relative overflow-hidden rounded-[28px] border border-white/40 bg-white/40 shadow-[0_20px_60px_-40px_rgba(0,0,0,0.35)] backdrop-blur-[3px] reveal-on-scroll"
          data-reveal
          data-reveal-delay={`${idx * 180}ms`}
        >
          <div class="grid grid-cols-1 lg:grid-cols-[1.45fr_1fr]">
            <div class="relative min-h-[440px] lg:min-h-[520px]">
              <img
                src={doctor.photo}
                alt={`Foto de ${doctor.name}`}
                loading="lazy"
                decoding="async"
                width="900"
                height="1200"
                class="absolute inset-0 h-full w-full object-cover"
              />
              <span class="absolute left-4 top-4 rounded-full bg-[rgba(0,0,0,0.35)] px-3 py-1 text-[10px] font-semibold uppercase tracking-[0.18em] text-white/90 backdrop-blur">
                {doctor.badge}
              </span>
              <div class="absolute inset-x-0 bottom-0 h-44 bg-gradient-to-t from-black/70 via-black/30 to-transparent" />
              <div class="absolute inset-x-0 bottom-0 p-5 text-white drop-shadow-[0_10px_26px_rgba(0,0,0,0.35)]">
                <h3 class="text-2xl font-semibold text-[var(--gold)]">{doctor.name}</h3>
                <p class="text-sm text-white/80">{doctor.subtitle}</p>
              </div>
            </div>

            <div class="flex h-full flex-col gap-4 bg-transparent p-4 lg:p-5">
              <div class="rounded-[22px] bg-[rgba(201,181,151,0.9)] p-6 text-[var(--charcoal)] shadow-[0_14px_30px_-20px_rgba(0,0,0,0.25)]">
                <p class="text-sm font-semibold text-[var(--charcoal)]/80">Experiencia</p>
                <p class="text-4xl font-semibold leading-none text-[var(--charcoal)]">{doctor.experienceYears}</p>
                <p class="text-[11px] uppercase tracking-[0.18em] text-[var(--charcoal)]/65">Años de práctica</p>
                <div class="mt-3 flex flex-wrap gap-2">
                  {doctor.tags.map((tag) => (
                    <span class="rounded-full border border-[rgba(176,128,80,0.35)] bg-white/60 px-3 py-1 text-xs font-semibold text-[var(--charcoal)] shadow-[0_10px_24px_rgba(0,0,0,0.12)]">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>

              <div class="rounded-[22px] bg-white/90 p-6 text-[var(--charcoal)] shadow-[0_18px_42px_-26px_rgba(0,0,0,0.24)] ring-1 ring-[rgba(32,32,32,0.06)]">
                <ul class="space-y-2 text-sm text-[var(--charcoal)]/85">
                  {doctor.bullets.map((item) => (
                    <li class="flex gap-2">
                      <span aria-hidden="true" class="mt-1 h-2 w-2 shrink-0 rounded-full bg-[var(--goldLight)]" />
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
