---
type Props = {
  data: { title: string; text: string; ctaLabel: string; ctaHref: string };
};

const { data } = Astro.props as Props;
---

<section class="container-wide py-16 lg:py-24">
  <div class="card relative overflow-hidden px-8 py-10 text-center sm:px-12 sm:py-12">
    <div aria-hidden="true" class="absolute inset-0 bg-gradient-to-r from-[rgba(176,128,80,0.12)] via-transparent to-[rgba(168,120,63,0.12)]" />
    <div class="relative space-y-3">
      <p class="pill mx-auto w-fit">Coordinemos</p>
      <h3 class="text-3xl sm:text-4xl">{data.title}</h3>
      <p class="text-lg leading-relaxed text-[var(--charcoal)]/75">{data.text}</p>
      <div class="flex justify-center">
        <a
          class="btn-primary"
          href={data.ctaHref}
          target="_blank"
          rel="noreferrer"
          aria-label="Abrir WhatsApp para agendar"
        >
          {data.ctaLabel}
        </a>
      </div>
    </div>
  </div>
</section>
